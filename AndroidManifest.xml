<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.jinzora"
      android:versionCode="3" android:versionName="1.3.8">
    <application 
    		android:icon="@drawable/icon" 
    		android:label="@string/app_name" 
    		android:debuggable="true"
    >
    	<meta-data android:name="android.app.default_searchable"
                   android:value=".Jinzora" />
    
        <activity android:label="@string/app_name" 
        		  android:name=".Jinzora">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!--  joining a junction activity: set playback target -->
            <intent-filter>
                <action android:name="junction.intent.action.JOIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <!--  Search -->
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.app.searchable" 
                       android:resource="@xml/searchable" />
                       
		</activity>
		<activity android:name="Preferences"></activity>
		<activity android:name="Player">
					<meta-data android:name="android.app.searchable" 
                     		   android:resource="@xml/searchable" />
		</activity>
		
		<activity android:name="Browser">
			<meta-data android:name="android.app.searchable" 
                       android:resource="@xml/searchable" />
        </activity>
		<activity android:name="Search"></activity>
		<!-- <activity android:name=".playback.players.views.JunctionBoxView" ></activity>  -->
		
		
		
		<service 
    			android:name="org.jinzora.playback.PlaybackService"
    			android:exported="true" 
    	>
    	</service>
    	
    	<receiver
    		android:name="org.jinzora.playback.JinzoraAppWidgetProvider">
    	>
    		<intent-filter>
    			<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
    		</intent-filter>
    		<meta-data 
    				android:name="android.appwidget.provider" 
    				android:resource="@xml/appwidget_info" 
    		/>
    	</receiver>
    	
		
		 <!-- Content provider for search suggestions -->
	     <provider android:name=".SearchHistoryProvider"
               android:authorities="org.jinzora"
         />
</application>
<uses-permission android:name="android.permission.INTERNET"></uses-permission>
<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>





<uses-sdk android:minSdkVersion="4"></uses-sdk>
</manifest> 